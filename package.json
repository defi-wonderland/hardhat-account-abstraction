{
  "name": "@defi-wonderland/sponsored-txs-hardhat-plugin",
  "version": "0.0.1",
  "description": "Hardhat TypeScript plugin for Sponsored Txs",
  "repository": "github:defi-wonderland/sponsored-txs-hardhat-plugin",
  "author": "Wonderland",
  "license": "MIT",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "keywords": [
    "ethereum",
    "smart-contracts",
    "sponsored-txs",
    "hardhat",
    "hardhat-plugin"
  ],
  "scripts": {
    "format": "yarn run prettier:fix && yarn run lint:fix",
    "test": "yarn compile:integration && mocha --exit --recursive 'test/**/*.test.ts'",
    "test:unit": "mocha --exit --recursive 'test/unit/**/*.test.ts'",
    "test:integration": "yarn compile:integration && mocha --exit --recursive 'test/integration/**/*.test.ts'",
    "build": "forge compile && tsc",
    "watch": "tsc -w",
    "prepublishOnly": "npm run build",
    "lint": "yarn lint:src && yarn lint:test",
    "lint:fix": "yarn lint:src --fix && yarn lint:test --fix && forge fmt",
    "lint:src": "eslint ./src",
    "lint:test": "eslint ./test",
    "prepare": "husky install",
    "prettier": "prettier src test --check",
    "prettier:fix": "yarn run prettier -- --write",
    "compile:integration": "cd test && cd fixture-projects && cd integration && npx hardhat compile"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "src/**/*.{js,ts,md}": "yarn run prettier:fix"
  },
  "files": [
    "dist/src/",
    "src/",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "3.0.5",
    "@types/chai": "4.3.11",
    "@types/debug": "4.1.12",
    "@types/mocha": "5.2.6",
    "@types/sinon": "10.0.15",
    "@typescript-eslint/eslint-plugin": "5.59.6",
    "@typescript-eslint/parser": "5.59.6",
    "chai": "4.3.10",
    "eslint": "8.34.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.0.1",
    "hardhat": "2.19.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.2",
    "mocha": "10.2.0",
    "prettier": "3.1.0",
    "sinon": "15.2.0",
    "ts-node": "10.9.1",
    "dotenv": "16.4.1",
    "typescript": "5.3.3"
  },
  "peerDependencies": {
    "hardhat": "2.19.0"
  },
  "dependencies": {
    "axios": "1.6.2",
    "debug": "4.3.4",
    "ethers": "6.9.0",
    "permissionless": "0.0.16",
    "viem": "1.20.3"
  }
}
